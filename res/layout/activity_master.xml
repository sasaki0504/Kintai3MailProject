<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterActivity" >

    <!-- 画面全体レイアウト -->

    <LinearLayout
        android:id="@+id/MasterLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
	    	android:text="設定画面"
	   		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"/>

        <!-- 社内業務 -->
        <LinearLayout
            android:id="@+id/MasterLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 社内業務 -->
            <Spinner
                android:id="@+id/SyanaiGyoumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/syanaigyoumu" />
		</LinearLayout>

        <!-- 時間 -->
        <LinearLayout
            android:id="@+id/MasterLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <!-- 開始時間 -->
            <Button
                android:id="@+id/defaultStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開始時間" />

            <!-- 終了時間 -->
            <Button
                android:id="@+id/defaultEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開始時間" />
        </LinearLayout>

        <!-- メンバーエリア -->
        <LinearLayout
        	android:id="@+id/MasterLinearLayout4"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:gravity="center">

            <!-- メンバー１～１５ -->

            <EditText
                android:id="@+id/name1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name7"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name8"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name9"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/name11"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name12"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name13"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name14"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name15"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
            </LinearLayout>

        <!-- 保存ボタンエリア -->
        <LinearLayout
        	android:id="@+id/MasterLinearLayout5"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:gravity="right">

            <!-- 戻るボタン -->
            <Button
                android:id="@+id/doBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戻る" />

            <!-- 保存ボタン -->
            <Button
                android:id="@+id/doSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />


        </LinearLayout>
	</LinearLayout>

</ScrollView>